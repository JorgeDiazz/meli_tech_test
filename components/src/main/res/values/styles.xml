<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/blue_dark</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding_small_100</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:lineSpacingExtra">@dimen/text_size_normal_100</item>
        <item name="android:textSize">@dimen/text_size_subtitle_2</item>
    </style>

    <!--region Dialogs-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/grey_blackish</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonNegativeDialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonPositiveDialog</item>
    </style>

    <style name="ButtonPositiveDialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/aquamarine</item>
    </style>

    <style name="ButtonNegativeDialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>
    <!--endregion-->

    <!--region Toolbars-->
    <style name="ToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="titleTextColor">@color/blue_dark</item>
    </style>

    <style name="ToolbarStyle.SemiBold">
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance.SemiBold</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_subtitle_1</item>
    </style>

    <style name="ToolbarTitleTextAppearance.SemiBold">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="AppToolbarTitleTextAppearance" parent="ToolbarTitleTextAppearance.SemiBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppToolbarTitleTextAppearance.Dark">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="ToolbarSubtitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_size_subtitle_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <!--endregion-->

</resources>
